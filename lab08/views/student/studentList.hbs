<div class="container">
  <a href="/">Home</a>
  <table class="table">
    <tr>
      <th colspan="4">
        <h5>Student list
          <a class="btn btn-primary" href="/student/add">Add</a>
        </h5>
      </th>
      <th colspan="3">
        <form action="/student/search" method="post">
          <input type="search" name="keyword" placeholder="Search by name" required>
        </form>
      </th>
      <th colspan="2">
        <select class="form-control" onchange="window.location.href=this.value">
          <option value="#">
            Select option to sort
          </option>
          <option value="/student/sort/gpa/asc">
            Sort by GPA ascending
          </option>
          <option value="/student/sort/gpa/desc">
            Sort by GPA descending
          </option>
          <option value="/student/sort/dob/asc">
            Sort by birthday ascending
          </option>
          <option value="/student/sort/dob/desc">
            Sort by birthday descending
          </option>
        </select>
      </th>
    </tr>
    <tr>
      <th>Name</th>
      <th>Dob</th>
      <th>Gender</th>
      <th>Department</th>
      <th>Class</th>
      <th>Image</th>
      <th>GPA</th>
      <th>Student Year</th>
      <th>Menu</th>
    </tr>
    {{!--! List lay tu db --}}
    {{#each student }}
    <tr>
      <td>{{ name }}</td>
      <td>{{ dateFormat dob "DD-MM-yyyy" }}</td>
      <td>{{ gender }}</td>
      <td>{{ department }}</td>
      <td>{{ class }}</td>
      <td><img src="{{image}}" width="100px"></td>
      <td>{{ gpa }}</td>
      <td>{{ studentYear }}</td>
      <td>
        <a class="btn btn-warning" href="/student/edit/{{_id}}">Edit</a>
        <a class="btn btn-danger" href="/student/delete/{{_id}}" onclick="return confirm(" Are you sure?");">Delete</a>
      </td>
    </tr>
    {{/each}}
  </table>
</div>