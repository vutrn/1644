<div class="container">
  <table class="table">
    <tr>
      <th colspan="9">
        <h5>Student list
          <a class="btn btn-primary" href="/student/add">Add</a>
        </h5>
      </th>
    </tr>
    <tr>
      <th>Name</th>
      <th>Dob</th>
      <th>Gender</th>
      <th>Department</th>
      <th>Class</th>
      <th>Image</th>
      <th>GPA</th>
      <th>Student Year</th>
      <th>Menu</th>
    </tr>
    {{!--! List lay tu db --}}
    {{#each student }}
    <tr>
      <td>{{ name }}</td>
      <td>{{ dateFormat dob "DD-MM-yyyy" }}</td>
      <td>{{ gender }}</td>
      <td>{{ department }}</td>
      <td>{{ class }}</td>
      <td><img src="{{image}}" width="100px"></td>
      <td>{{ gpa }}</td>
      <td>{{ studentYear }}</td>
      <td>
        <a class="btn btn-warning" href="/student/edit/{{_id}}">Edit</a>
        <a class="btn btn-danger" href="/student/delete/{{_id}}">Delete</a>
      </td>
    </tr>
    {{/each}}
  </table>
</div>