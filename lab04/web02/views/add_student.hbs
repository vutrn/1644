<div class="container card bg">
  <form action="/output" method="post">
    <h1 class="text-primary">Add new student</h1>
    <table class="text-">
      <tr>
        <th>Name</th>
        <td><input type="text" name="name" minlength="5" required></td>
      </tr>
      <tr>
        <th>Date of birth</th>
        <td><input type="date" name="dob" required></td>
      </tr>
      <tr>
        <th>Email</th>
        <td><input type="email" name="email" required></td>
      </tr>
      <tr>
        <th>Gender</th>
        <td>
          <input type="radio" name="gender" value="Male"> Male
          <input type="radio" name="gender" value="Female"> Female
        </td>
      </tr>
      <tr>
        <th>Student year</th>
        <td><input type="number" name="year" min="1" max="4"></td>
      </tr>
      <tr>
        <td>Major</td>
        <td>
          <select name="major" required>
            <option value="Computing">Computing</option>
            <option value="Business">Business</option>
            <option value="Graphic Design">Graphic Design</option>
            <option value="Marketing">Marketing</option>
          </select>
        </td>
      </tr>
      <tr>
        <th>Image</th>
        <th><input type="url" name="image" required></th>
      </tr>
      <tr>
        <th>
          <input type="submit" value="Add">
        </th>
      </tr>
    </table>
  </form>
</div>